<resources>

    <style name="edittext_style1" >
        <item name="android:background">@drawable/backwithborder</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="progress_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="blue_button_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/color_blue</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_24</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>